<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Facebook Comment Page</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 600px;
      margin: 20px auto;
    }

    .comment-box {
      background-color: #f0f2f5;
      padding: 20px;
      border-radius: 8px;
    }

    .post-section {
      width: 60vw;
      height: 60vw;
      max-height: 300px;
      max-width: 300px;
      background-color: #ffffff;
      border-radius: 8px;
      overflow: hidden;
      margin-bottom: 20px;
  
    }

    .post-section img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .comment {
      display: flex;
      align-items: flex-start;
      margin-bottom: 20px;
    }

    .profile-pic {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      overflow: hidden;
      margin-right: 10px;
    }

    .profile-pic img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .comment-content {
      flex-grow: 1;
    }

    .comment-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .comment-header h3 {
      margin: 0;
    }

    .comment-header span {
      font-size: 14px;
      color: #606770;
    }

    .add-comment {
      background-color: #ffffff;
      border: 1px solid #dddfe2;
      border-radius: 8px;
      padding: 10px;
      margin-top: 20px;
    }

    .add-comment textarea {
      width: calc(100% - 70px);
      height: 40px;
      border: none;
      resize: none;
      font-size: 16px;
      padding: 8px;
    }

    .add-comment button {
      width: 60px;
      height: 40px;
      background-color: #1877f2;
      color: #ffffff;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .add-comment button:hover {
      background-color: #1658cb;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="comment-box">
      <!-- Existing comments -->
      <div class="comment">
        <div class="profile-pic">
          <img src="/images/uploads/<%=post.user.profileImage%>" alt="Profile Picture">
        </div>
        <div class="comment-content">
          <div class="comment-header">
            <h3><%=post.user.username%></h3>
            <span>2h</span>
          </div>
          <p><%=post.caption%></p>
        </div>
      </div>
      <!-- Post section -->
      <div class="post-section">
        <img src="/images/uploads/<%=post.picture%>" alt="Post Image">
      </div>
      <!-- Add more comments and posts here -->
    </div>
    <!-- Comment input section -->
    <div class="add-comment">
      <textarea id="commentInput" placeholder="Write a comment..."></textarea>
      <button id="postComment">Post</button>
    </div>
  </div>
  
  <script>
    document.getElementById('postComment').addEventListener('click', function() {
      const commentText = document.getElementById('commentInput').value;
      if (commentText.trim() !== '') {
        // Append the new comment to the comment box
        appendComment(commentText);
        // Clear the comment input field after posting
        document.getElementById('commentInput').value = '';
      }
    });

    function appendComment(commentText) {
      // Create the comment HTML structure
      const commentHtml = `
        <div class="comment">
          <div class="profile-pic">
            <img src="profile2.jpg" alt="Profile Picture">
          </div>
          <div class="comment-content">
            <div class="comment-header">
              <h3>username}</h3>
              <span>Now</span>
            </div>
            <p>${commentText}</p>
          </div>
        </div>
      `;
      // Append the new comment to the comment box
      const commentBox = document.querySelector('.comment-box');
      commentBox.innerHTML += commentHtml;
    }
  </script>
</body>
</html>